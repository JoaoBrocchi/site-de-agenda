<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>

    <div class="box">
        <% itemsList.forEach(element => { %>
            <form action="\delete" method="post">
                <div class="item">
                    <input name="checkbox" type="checkbox" value="<%=element._id %>" onchange="this.form.submit()">
                    <p><%= element.name %></p>
                </div>
                <input type="hidden" name="listName" value="<%=title%>">
            </form>
        <% }); %>
        
        <form action="\" method="post">
            <input name="newItem" type="text" placeholder="New itens" autocomplete="off">
            <button name="list" type="submit" value=<%= title %>>+</button>
        </form>
        
    </div>
        
   

<%- include("footer") -%>